add_namespace = boer_states

country_event = { #OFS asks for recognition
	id = boer_states.79
	title = boer_states.79.t
	desc = boer_states.79.d

	is_triggered_only=yes
	option = {
		name = boer_states.79.a #recognise them
		ai_chance = { factor = 80 }
		FROM ={
			country_event = {days = 1 id=boer_states.80}
			add_opinion_modifier = {
				target = ROOT
				modifier = afr_country_was_recognised
			}
		}
		add_opinion_modifier = {
			target = FROM
			modifier = afr_recognised_country
		}
		if = {
			limit = {
				OR = {
					tag = PRS
					tag = GER
				}
			}
			set_country_flag = recognised_ofs
		}
	}
}


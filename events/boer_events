country_event = { # ENG - SAF requests a act of union
	id = boer_states.102
	title = boer_states.102.t
	desc = boer_states.102.d
	picture = GFX_report_event_british_army4
	is_triggered_only = yes

	option = { # agree
		name = boer_states.102.a
		add_political_power = -100
		SAF={country_event = {id = boer_states.103 days = 10}}
		ai_chance = {
			factor = 100
		}
	}
	option = { # i see no reason
		name = boer_states.102.b
		ai_chance = {
			factor = 0
		}
	}
}
country_event = { # SAF - Act of union
	id = boer_states.103
	title = boer_states.103.t
	desc = boer_states.103.d

	is_triggered_only = yes

	option = { # We can unite!
		name = boer_states.103.a
		SAF={
			drop_cosmetic_tag = yes
			add_ideas={
				SAF_divided_administration
				SAF_afrikkan_agitation

			}
			if={
				limit = {ZUL={exists = yes}}
				ZUL={
					every_owned_state={
						add_core_of = SAF
						remove_core_of = ZUL
					}
				}
				annex_country = {
					target = ZUL
					transfer_troops = yes
				}
			}
			if={
				limit = {NAT={exists = yes}}
				NAT={
					every_owned_state={
						add_core_of = SAF
						remove_core_of = NAT
					}
				}
				annex_country = {
					target = NAT
					transfer_troops = yes
				}
			}
			if={
				limit = {OFS={exists = yes}}
				OFS={
					every_owned_state={
						add_core_of = SAF
						remove_core_of = OFS
					}
				}
				annex_country = {
					target = OFS
					transfer_troops = yes
				}
			}
			if={
				limit = {TRV={exists = yes}}
				TRV={
					every_owned_state={
						add_core_of = SAF
						remove_core_of = TRV
					}
				}
				annex_country = {
					target = TRV
					transfer_troops = yes
				}
			}
			if={
				limit = {GQW={exists = yes}}
				GQW={
					every_owned_state={
						add_core_of = SAF
						remove_core_of = GQW
					}
				}
				annex_country = {
					target = GQW
					transfer_troops = yes
				}
			}
			if={
				limit = {GQE={exists = yes}}
				GQE={
					every_owned_state={
						add_core_of = SAF
						remove_core_of = GQE
					}
				}
				annex_country = {
					target = GQE
					transfer_troops = yes
				}
			}
			set_cosmetic_tag= SAF_union
			add_to_array = { national_culture_array = global.afrikaans }
			set_capital = { state = 275 }
		}
		ai_chance = {
			factor = 100
		}
	}
}

country_event = { #question of slavery
	id = boer_states.120
	title = boer_states.120.t
	desc = boer_states.120.d

	is_triggered_only=yes
	option = {
		name = boer_states.120.a #slavery is fine
		ai_chance = { factor = 50 }
		add_political_power = 100
	}
	option = {
		name = boer_states.120.b #we must end this
		ai_chance = { factor = 50 }
		swap_ideas={
			add_idea = racial_laws
			remove_idea = slavery
		}
	}
}


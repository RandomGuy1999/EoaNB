country_event = { #Border War
	id = boer_states.123
	title = boer_states.123.t
	desc = boer_states.123.d

	is_triggered_only=yes
	option = {
		id = boer_states.123.a
		ai_chance = { factor = 100 }

	    start_border_war = {
		    change_state_after_war = no
	     	attacker = {
			state = 1140
			num_provinces = 1
			on_win = boer_states.125
			on_lose = boer_states.124
			modifier = 0.1
			dig_in_factor = 0
			terrain_factor = 0
		    }

		    defender = {
			    state = 747
			    num_provinces = 1
		    	on_win = boer_states.124
		    	on_lose = boer_states.125
		    	dig_in_factor = 0.1


		   }
	    }
	}
}

